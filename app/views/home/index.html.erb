<script type="text/javascript">

$(document).ready(function(){
  $('.ac-combination-1').click(function(e){
    //$('.ac-combination-1').addClass('normal');
    if($(this).find('i.actives').length != 0)
    {
      $('.ac-combination-1 i').each(function(index){
        $(this).removeClass('actives');
        $(this).addClass('normal'); 
      });
      $(this).children("i").removeClass('actives');
      $(this).children("i").addClass('normal');
    }
    else
    {
      $('.ac-combination-1 i').each(function(index){
        $(this).removeClass('actives');
        $(this).addClass('normal'); 
      });
      $(this).children("i").removeClass('normal');
      $(this).children("i").addClass('actives');
    }
  });
});
</script>
